{
   "version": "2.0.0",
   "tasks": [
      {
         "label": "make bin",
         "type": "shell",
         "windows": {
            "command": "mkdir -p bin"
         },
         "linux": {
            "command": "mkdir -p bin"
         }
      },
      {
         "label": "Pascal",
         "type": "shell",
         "windows": {
            "command": "/usr/bin/fpc"
         },
         "linux": {
            "command": "/usr/bin/fpc"
         },
         "presentation": {
            "reveal": "always",
            "panel": "new"
         },
         "args": [
            {
               "value": "-FE./bin",
               "quoting": "escape"
            },
            {
               "value": "src/main.pas",
               "quoting": "escape"
            }
         ],
         "problemMatcher": {
            "owner": "external",
            "pattern": {
               "regexp": "^([\\w]+\\.(p|pp|pas))\\((\\d+)\\,(\\d+)\\)\\s(Fatal|Error|Warning|Note):(.*)",
               "file": 1,
               "line": 3,
               "column": 4,
               "message": 6
            }
         },
         // "group": {
         //    "kind": "build",
         //    "isDefault": true
         // }
      },
      {
         "label": "Build Pascal",
         "dependsOn": ["make bin", "Pascal"],
         "group": {
            "kind": "build",
            "isDefault": true
         }
      }
   ]
}
